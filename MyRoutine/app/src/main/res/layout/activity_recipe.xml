<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.developer.tonny.myroutine.Activities.RecipeActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/card1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:lineSpacingExtra="1.5sp"
        android:text="@string/recipe1"
        android:textAlignment="textStart"
        android:textSize="14dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_width="368dp"
        android:layout_height="150dp"
        cardview:cardCornerRadius="6dp"
        cardview:cardElevation="4dp"
        cardview:cardUseCompatPadding="true"
        cardview:cardPreventCornerOverlap="false"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/almuerzo"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/idAlmuerzo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Zucchini, Frijoles Negros y Arroz al Sarten"
            android:layout_gravity="bottom"
            android:background="#8c000000"
            android:textColor="#ffe3e3e3"
            android:textSize="14sp"
            android:textStyle="bold"/>
    </android.support.v7.widget.CardView>

</RelativeLayout>
