<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="37dp"
    tools:context="com.example.lenovow520.basededatos.AgregarAlumnos">

    <EditText
        android:id="@+id/txtMatricula"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="48dp"
        android:hint="Matricula"
        android:inputType="number" />

    <EditText
        android:id="@+id/txtNombre"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/spinnerDia"
        android:layout_alignStart="@+id/spinnerDia"
        android:layout_below="@+id/txtMatricula"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="14dp"
        android:hint="Nombre" />

    <TextView
        android:id="@+id/txtVEdad"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@+id/spinnerCarrera"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/spinnerDia"
        android:layout_toRightOf="@+id/spinnerDia"
        android:hint="edad" />

    <TextView
        android:id="@+id/texViewEdad"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/spinnerDia"
        android:layout_alignRight="@+id/spinnerDia"
        android:layout_below="@+id/spinnerCarrera"
        android:layout_marginTop="18dp"
        android:hint="edad"
        android:text="Edad" />

    <EditText
        android:id="@+id/txtApellido"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/txtNombre"
        android:layout_alignStart="@+id/txtNombre"
        android:layout_below="@+id/txtNombre"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:hint="Apellido Paterno" />

    <EditText
        android:id="@+id/txtMaterno"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/txtApellido"
        android:layout_alignStart="@+id/txtApellido"
        android:layout_below="@+id/txtApellido"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        android:hint="Apellido Materno" />

    <Spinner
        android:id="@+id/spinnerDia"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtMaterno"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="37dp"
        android:textAlignment="gravity" />

    <Spinner
        android:id="@+id/spinnerMes"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinnerCarrera"
        android:layout_alignEnd="@+id/spinnerCarrera"
        android:layout_alignRight="@+id/spinnerCarrera"
        android:layout_marginTop="37dp"
        android:textAlignment="gravity" />

    <Spinner
        android:id="@+id/spinnerAno"
        android:layout_width="120dp"

        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtMaterno"
        android:layout_alignRight="@+id/txtMaterno"
        android:layout_below="@+id/spinnerMes"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="37dp" />

    <Spinner
        android:id="@+id/spinnerCarrera"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinnerDia"
        android:layout_alignStart="@+id/spinnerDia"
        android:layout_below="@+id/spinnerDia"
        android:layout_marginTop="28dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/spinnerAno"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/spinnerAno"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:backgroundTint="@color/colorAccent"
        android:elevation="4dp"
        android:onClick="obtenerValores"
        android:text="Guardar"
        android:textColor="#fff" />


</RelativeLayout>
