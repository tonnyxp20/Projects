<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovow520.basededatos.ReportesAlumnos">

    <Spinner
        android:id="@+id/spinnerMatricula"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/radioGroup2"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.351" />

    <Spinner
        android:id="@+id/spinnerRepoCarrera"
        android:layout_width="150dp"
        android:layout_height="37dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/radioGroup2"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.351" />

    <Spinner
        android:id="@+id/spinnerEdad"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:layout_marginRight="8dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/radioGroup2"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.351" />

    <TextView
        android:id="@+id/textViewReporte"
        android:layout_width="302dp"
        android:layout_height="221dp"
        android:text="Info"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="92dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/radioGroup2">

        <RadioButton
            android:id="@+id/radioButtonMatricula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Matricula"
            android:onClick="onRadioButtonClicked"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="27dp" />

        <RadioButton
            android:id="@+id/radioButtonCarrera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="Carrera"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="77dp" />

        <RadioButton
            android:id="@+id/radioButtonEdad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="Edad"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="127dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RadioGroup>
</android.support.constraint.ConstraintLayout>
